{
    "compileOnSave": true,
    "compilerOptions": {
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["*"]
        },
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["dom", "es5", "es6"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "include": ["src/**/*"]
}
